<div id="ordrinMenu">
  <ul class="menuList">
    {{#each menu}}
      <li class="menuCategory" data-mgid="{{this.id}}">
        <div class="menu-hd">
          <p class="header itemListName" data-listener="itemListName">{{this.name}}</p>
        </div>
        <ul class="itemList menu main-menu">
          {{#each this.children}}
            <li class="mi" data-listener="menuItem" data-miid="{{this.id}}">
              <p class="name" data-listener="menuItem">{{this.name}}</p>
              <p>
                <span class="price" data-listener="menuItem">{{this.price}}</span>
              </p>
              <span class="menuItemDescription hidden">{{this.descrip}}</span>
              <ul class="optionCategoryList hidden">
                {{#each this.children}}
                  <li data-mogid={{this.id}} class="optionCategory">
                    <span class="header">{{this.name}}</span>
                    <ul class="optionList">
                      {{#each this.children}}
                        <li class="option" data-moid="{{this.id}}">
                          <input type="checkbox" class="optionCheckbox" />
                          {{this.name}}
                          <span class="price">{{this.price}}</span>
                        </li>
                      {{/each}}
                    </ul>
                    <div class="clear"></div>
                  </li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>

  <!-- Menu Item Dialog -->
  <div class="optionsDialog popup-container hidden">
    <div class="popup-box-container dialog">
      <div class="close-popup-box">
        <img class="closeDialog" data-listener="closeDialog" src="https://fb.ordr.in/images/popup-close.png" />
      </div>
      <div class="mItem-add-to-tray popup-content">
        <div class="menu-hd">
          <div class="boxright">
            <p class="slim-col itemPrice"></p>
            <h1 class="big-col itemTitle"></h1>
          </div>
          <div class="clear"></div>
        </div>
        <p class="desc dialogDescription"></p>
      </div>
      <div class="optionContainer"></div>
    </div>
  </div>

  <div class="dialogBg fade-to-gray hidden"></div>

</div>
